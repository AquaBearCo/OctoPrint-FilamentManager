<form class="form-horizontal">

    <h3>{{ _("Selected Spools") }}</h3>

     <!-- ko foreach: tools -->
    <div class="control-group">
        <label class="control-label">{{ _('Tool') }} <span data-bind="text: $index"></span></label>
        <div class="controls">
            <select data-bind="options: $root.spools.items, optionsText: function(item) { return item.name + ' ' + (item.profile.weight - item.used).toFixed(0) + 'g - ' + item.profile.name; }, optionsValue: function(item) { return item.id; }, optionsCaption: '{{ _('--- Select Spool ---') }}', value: $root.settings.settings.plugins.filamentmanager.selectedSpools['tool'+($index())]"></select>
        </div>
    </div>
    <!-- /ko -->

    <div class="control-group">
       <div class="controls">
           <label class="checkbox">
               <input type="checkbox" data-bind="checked: $root.settings.settings.plugins.filamentmanager.enableTracking">{{ _("Enable filament odometer") }}
           </label>
       </div>
   </div>

   <div class="control-group">
      <div class="controls">
          <label class="checkbox">
              <input type="checkbox" data-bind="checked: $root.settings.settings.plugins.filamentmanager.enableWarning">{{ _("Warn if print job exceeds remaining filament") }}
          </label>
      </div>
    </div>

    <h3>{{ _("Filament Spools") }} <i class="icon-spinner icon-spin" data-bind="visible: requestInProgress()"></i></h3>

    <!-- sorting -->

    <div class="pull-right">
        <small>
            {{ _("Sort by") }}: <a href="#" data-bind="click: function() { spools.changeSorting('name'); }">{{ _("Name (ascending)") }}</a> | <a href="#" data-bind="click: function() { spools.changeSorting('profile'); }">{{ _("Profile (ascending)") }}</a> | <a href="#" data-bind="click: function() { spools.changeSorting('remaining'); }">{{ _("Remaining (decending)") }}</a>
        </small>
    </div>

    <!-- table -->

    <table class="table table-striped table-hover table-condensed table-hover">
    <thead>
        <tr>
            <th class="settings_plugin_filamentmanager_spools_name">{{ _('Name') }}</th>
            <th class="settings_plugin_filamentmanager_spools_profile">{{ _('Profile') }}</th>
            <th class="settings_plugin_filamentmanager_spools_weight">{{ _('Weight') }}</th>
            <th class="settings_plugin_filamentmanager_spools_remaining">{{ _('Remaining') }}</th>
            <th class="settings_plugin_filamentmanager_spools_used">{{ _('Used') }}</th>
            <th class="settings_plugin_filamentmanager_spools_action">{{ _('Action') }}</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: spools.paginatedItems">
        <tr>
            <td class="settings_plugin_filamentmanager_spools_name" data-bind="text: name"></td>
            <td class="settings_plugin_filamentmanager_spools_profile" data-bind="text: profile.name"></td>
            <td class="settings_plugin_filamentmanager_spools_weight"><span data-bind="text: profile.weight"></span>g</td>
            <td class="settings_plugin_filamentmanager_spools_remaining"><span data-bind="text: (profile.weight - used).toFixed(0)"></span>g</td>
            <td class="settings_plugin_filamentmanager_spools_used"><span data-bind="text: (used * 100 / profile.weight).toFixed(0)"></span>%</td>
            <td class="settings_plugin_filamentmanager_spools_action">
                <a href="#" class="icon-pencil" title="{{ _('Edit Spool') }}" data-bind="enable: !$root.requestInProgress(), click: function() { $root.showSpoolDialog($data); }"></a>&nbsp;|&nbsp;<a href="#" class="icon-trash" title="{{ _('Delete Spool') }}" data-bind="enable: !$root.requestInProgress(), click: function() { $root.removeSpool($data); }"></a>
            </td>
        </tr>
    </tbody>
    </table>

    <!-- pagination -->

    <div class="pagination pagination-mini pagination-centered">
    <ul>
        <li data-bind="css: {disabled: spools.currentPage() === 0}"><a href="#" data-bind="click: spools.prevPage">«</a></li>
    </ul>
    <ul data-bind="foreach: spools.pages">
        <li data-bind="css: { active: $data.number === $root.spools.currentPage(), disabled: $data.number === -1 }"><a href="#" data-bind="text: $data.text, click: function() { $root.spools.changePage($data.number); }"></a></li>
    </ul>
    <ul>
        <li data-bind="css: {disabled: spools.currentPage() === spools.lastPage() || spools.lastPage() === -1}"><a href="#" data-bind="click: spools.nextPage">»</a></li>
    </ul>
    </div>

    <!-- buttons -->

    <div class="pull-right">
        <button class="btn" data-bind="click: function() { showProfilesDialog(); }">{{ _("Manage Profiles") }}</button>
        <button class="btn" data-bind="enable: profiles().length > 0, click: function() { showSpoolDialog(); }">{{ _("Add Spool") }}</button>
    </div>

</form>
